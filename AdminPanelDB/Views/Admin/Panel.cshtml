@model AdminPanelDB.ViewModels.AdminPanelViewModel




<div class="admin-container">

    @if (TempData["Error"] != null)
    {
        <p style="color:red">@TempData["Error"]</p>
    }

    <!-- Linke Spalte: Abteilungen & Referate -->
    <div class="admin-left">
        <h2>Admin Panel</h2>

        <form asp-action="CreateAbteilung" method="post">
            <input type="text" name="name" placeholder="New Abteilung" />
            <button type="submit">Add Abteilung</button>
        </form>

        <table id="abteilungenTable">
            <thead>
                <tr>
                    <th>Abteilung</th>
                    <th>Referate</th>
                    <th>Actions</th>
                </tr>
                <tr class="filter-row">
                    <th><input type="text" placeholder="Filter Abteilung" onkeyup="filterTable('abteilungenTable', 0)"></th>
                    <th><input type="text" placeholder="Filter Referate" onkeyup="filterTable('abteilungenTable', 1)"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Abteilungen)
                {
                    <tr>
                        <td>
                            <form asp-action="EditAbteilung" method="post">
                                <input type="hidden" name="id" value="@item.Abteilung.Id" />
                                <input type="text" name="name" value="@item.Abteilung.Name" />
                                <button type="submit">Save</button>
                            </form>
                            <form asp-action="DeleteAbteilung" method="post">
                                <input type="hidden" name="id" value="@item.Abteilung.Id" />
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                        <td>
                            @foreach (var refa in item.Referate)
                            {
                                <form asp-action="EditReferat" method="post">
                                    <input type="hidden" name="id" value="@refa.Id" />
                                    <input type="text" name="name" value="@refa.Name" />
                                    <button type="submit">Save</button>
                                </form>
                                <form asp-action="DeleteReferat" method="post">
                                    <input type="hidden" name="id" value="@refa.Id" />
                                    <button type="submit">Delete</button>
                                </form>
                                <br />
                            }
                        </td>
                        <td>
                            <form asp-action="CreateReferat" method="post">
                                <input type="hidden" name="abteilungId" value="@item.Abteilung.Id" />
                                <input type="text" name="name" placeholder="New Referat" />
                                <button type="submit">Add</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Rechte Spalte: Personen -->
    <div class="admin-right">
        <h2>Personen</h2>

        <table id="personenTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titel</th>
                    <th>Name</th>
                    <th>Vorname</th>
                    <th>Email</th>
                    <th>UId</th>
                    <th>Abteilung</th>
                    <th>Referat</th>
                    <th>Stelle</th>
                    <th>Kennwort</th>
                    <th>Actions</th>
                </tr>
                <tr class="filter-row">
                    <th><input type="text" placeholder="Filter Id" onkeyup="filterTable('personenTable', 0)"></th>
                    <th><input type="text" placeholder="Filter Titel" onkeyup="filterTable('personenTable', 1)"></th>
                    <th><input type="text" placeholder="Filter Name" onkeyup="filterTable('personenTable', 2)"></th>
                    <th><input type="text" placeholder="Filter Vorname" onkeyup="filterTable('personenTable', 3)"></th>
                    <th><input type="text" placeholder="Filter Email" onkeyup="filterTable('personenTable', 4)"></th>
                    <th><input type="text" placeholder="Filter UId" onkeyup="filterTable('personenTable', 5)"></th>
                    <th><input type="text" placeholder="Filter Abteilung" onkeyup="filterTable('personenTable', 6)"></th>
                    <th><input type="text" placeholder="Filter Referat" onkeyup="filterTable('personenTable', 7)"></th>
                    <th><input type="text" placeholder="Filter Stelle" onkeyup="filterTable('personenTable', 8)"></th>
                    <th><input type="text" placeholder="Filter Kennwort" onkeyup="filterTable('personenTable', 9)"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Personen)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Titel</td>
                        <td>@p.Name</td>
                        <td>@p.Vorname</td>
                        <td>@p.Email</td>
                        <td>@p.UId</td>
                        <td>@p.Abteilung</td>
                        <td>@p.Referat</td>
                        <td>@p.Stelle</td>
                        <td>@p.Kennwort</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@p.Id">Edit</a>
                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="CreateUser">Create</a>
    </div>
</div>


<script>
    function filterTable(tableId, colIndex) {
        const table = document.getElementById(tableId);
        const tr = table.getElementsByTagName("tbody")[0].getElementsByTagName("tr");
        const input = document.querySelector(`#${tableId} thead tr.filter-row th:nth-child(${colIndex + 1}) input`);
        const filter = input.value.toLowerCase();

        for (let i = 0; i < tr.length; i++) {
            const td = tr[i].getElementsByTagName("td")[colIndex];
            if (td) {
                // ищем input внутри td, если есть
                const inputElem = td.querySelector('input');
                let txtValue = inputElem ? inputElem.value : td.textContent || td.innerText;
                txtValue = txtValue.toLowerCase();
                tr[i].style.display = txtValue.indexOf(filter) > -1 ? "" : "none";
            }
        }
    }

</script>
